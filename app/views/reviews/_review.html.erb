<p><%= review.rating %></p>
<p><%= review.comment %></p>

<%= if user_signed_in? %>

  <%= if review.user_id == current.user.id %>

    <%= link_to 'Edit', edit_project_review_path(review.project, review) %>
    <%= link_to 'Delete', project_review_path(review.project, review), method: :delete, data: {confirm: "Are you sure?"} %>

  <% end %>
  
<% end %>
